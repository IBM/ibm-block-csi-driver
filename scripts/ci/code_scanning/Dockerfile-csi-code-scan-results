FROM python:3.6.9

RUN pip3 install deepdiff

COPY scripts/ci/code_scanning/code_scan_results_entrypoint.sh ./entrypoint.sh
COPY scripts/ci/code_scanning/code_scan_results/* ./code_scan_results/
RUN chmod u+x entrypoint.sh code_scan_results/*

ENV CONTAINER_OUTPUT_PATH="/results"
RUN mkdir ${CONTAINER_OUTPUT_PATH}

ENV CONTAINER_BASELINE_PATH="/baseline_results"
RUN mkdir ${CONTAINER_BASELINE_PATH}

WORKDIR .

ENTRYPOINT ["/bin/sh", "-c", "./entrypoint.sh"]
