# Build stage
FROM golang:1.12.6 as builder

WORKDIR /go/src/github.com/ibm/ibm-block-csi-driver
ENV GO111MODULE=on

COPY node ./node
COPY go.mod .
COPY go.sum .
RUN go mod vendor
RUN mkdir /results
RUN go get github.com/securego/gosec/cmd/gosec

VOLUME /results
WORKDIR vendor

ENTRYPOINT ["gosec", "-log", "/results/code_scan_node_dep.log", "-out", "/results/code_scan_node_dep", "-no-fail", "./..."]