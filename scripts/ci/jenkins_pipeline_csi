pipeline {
    agent {
        label 'docker-engine'
    }
    stages {
        stage ('Run CSI controller unittests (inside container)') {
            steps {
                sh 'mkdir -p build/reports && chmod 777 build/reports'
                sh './scripts/run_unitests.sh `pwd`/build/reports'
            }
        }
        stage ('Build CSI controller image') {
            steps {
                sh './scripts/ci/build_push_images.sh'
            }
        }
    }
    post {
        always {
            sh 'ls -la build/reports/'
            junit 'build/reports/*.xml'
            cobertura coberturaReportFile: 'build/reports/*.xml'
            sh '[ -d build/reports ] && rm -rf build/reports'
        }
    }
}
